{
  "position": "top",
  "layer": "top",
  "height": 40,
  "margin-top": 2,
  "margin-bottom": 0,
  "margin-left": 2,
  "margin-right": 2,
  "modules-left": [
    "custom/powermenu",
    "hyprland/workspaces",
    "cpu",
    "memory",
    "disk"
  ],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "custom/updates",
    "clock",
    "network",
    "wireplumber",
    "bluetooth",
    "battery",
    "tray"
  ],
  "clock": {
    "format": "  <span color=\"#C4C7C5\">{:%H:%M - %A %d %B}</span>",
    "timezone": "Europe/Paris",
    "locale": "fr_FR.UTF-8",
    "tooltip": "true",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "weeks-pos": "right",
      "on-scroll": 1,
      "scroll-step": 0.1,
      "on-click-right": "mode"
    },
    "actions": {
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    },
    "format-alt": "  <span color=\"#C4C7C5\">{:%d/%m}</span>"
  },
  "hyprland/window": {
    "format": "{title}",
    "rewrite": {
      "(.*) - Visual Studio Code": "$1",
      "(.*) - Chromium": "$1"
    }
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": "",
      "urgent": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 6
    },
    "max-workspaces": 6
  },
  "battery": {
    "states": {
      "good": 80,
      "warning": 50,
      "critical": 15
    },
    "format": "  <span color=\"#C4C7C5\">{capacity}%</span>",
    "format-charging": "  <span color=\"#C4C7C5\">{capacity}%</span>",
    "format-plugged": "",
    "interval": 5
  },
  "memory": {
    "format": "  <span color=\"#C4C7C5\">{percentage}%</span>",
    "format-alt": "  <span color=\"#C4C7C5\">{used}/{total}Go</span>",
    "interval": 5
  },
  "cpu": {
    "format": "  <span color=\"#C4C7C5\">{usage}%</span>",
    "format-alt": "  <span color=\"#C4C7C5\">{avg_frequency}GHz</span>",
    "interval": 5
  },
  "disk": {
    "format": "  <span color=\"#C4C7C5\">{percentage_used}%</span>",
    "interval": 500,
    "path": "/"
  },
  "network": {
    "format-wifi": " <span color=\"#C4C7C5\">{essid}</span>",
    "format-ethernet": " <span color=\"#C4C7C5\">{ifname}</span>",
    "format-disconnected": "",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
  },
  "custom/updates": {
    "format": "<span color=\"#C4C7C5\">{}</span>",
    "interval": 3600,
    "exec": "~/.config/waybar/scripts/updatescheck",
    "return-type": "json",
    "exec-if": "exit 0",
    "signal": 8
  },
  "bluetooth": {
    "format": "",
    "format-off": "",
    "format-connected": "",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click-left": "~/.config/polybar/scripts/bluetooth.sh --toggle",
    "on-click-right": "/sbin/overskride"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "wireplumber": {
    "format": "{icon}",
    "max-volume": 100,
    "scroll-step": 0.1,
    "tooltip-format": "{volume}%",
    "format-muted": "",
    "format-icons": {
      "default": ["", ""]
    },
    "on-click": "pactl set-sink-mute $(pactl info | grep 'Default Sink:' | cut -d':' -f2) toggle",
    "on-scroll-up": "pactl set-sink-volume $(pactl info | grep 'Default Sink:' | cut -d':' -f2) +1%",
    "on-scroll-down": "pactl set-sink-volume $(pactl info | grep 'Default Sink:' | cut -d':' -f2) -1%",
    "on-click-right": "pavucontrol"
  },
  "cava": {
    "framerate": 30,
    "autosens": 1,
    "sensitivity": 100,
    "bars": 14,
    "lower_cutoff_freq": 50,
    "higher_cutoff_freq": 10000,
    "method": "pipewire",
    "source": "auto",
    "stereo": true,
    "reverse": false,
    "bar_delimiter": 0,
    "monstercat": false,
    "waves": false,
    "noise_reduction": 0.77,
    "input_delay": 2,
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
    "actions": {
      "on-click-right": "mode"
    }
  },
  "custom/vpn": {
    "format": "<span color=\"#C4C7C5\">{}</span>",
    "interval": 10,
    "exec": "~/.config/scripts/vpn_manager.sh --status",
    "on-click": "~/.config/scripts/vpn_manager.sh  --toggle",
    "tooltip": false
  },
  "custom/powermenu": {
    "format": "",
    "tooltip": false,
    "on-click": "poweroff"
  }
}
